<% layout('layouts/boilerplate')%>


<div class="container">
    <div class="row">
        <div class="col-8">
            <canvas id="myChart"></canvas>
        </div>
        <div class="mt-6 col-4">
            <form action="/render_coin">
                <label for="coin">Look up a specific Coin:</label>
                <select name="coin" id="coin">
                    <% for (let name of names){ %>
                        <option value="<%=name%>">
                            <%=name%>
                        </option>
                        <%}%>
                </select>

                <button>submit</button>
            </form>

            <a href="/coin_volume?coin=<%=name%>">View Volume</a>
            <br>
            <a href="/coin_mc?coin=<%=name%>">View Market Cap</a>
            <br>
            <a href="/coin_cs?coin=<%=name%>">View Circulating Supply</a>
        </div> 
    
        <h2>High: $<%=parseFloat(high).toLocaleString()%></h2>
        <h2>Low: $<%=parseFloat(low).toLocaleString()%></h2>
        <h2>Summation: $<%=parseFloat(summation).toLocaleString()%></h2>
        <h2>Average: $<%=parseFloat(average).toLocaleString()%></h2>
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var prices = <%- JSON.stringify(prices) %>;
        var name = <%- JSON.stringify(name) %>;
        var dates = <%- JSON.stringify(dates) %>;
        const ctx = document.getElementById('myChart');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: dates,
                datasets: [{
                    label: `${name} Price`,
                    data: prices,
                    borderWidth: 1
                }]
            },

        });
    </script>